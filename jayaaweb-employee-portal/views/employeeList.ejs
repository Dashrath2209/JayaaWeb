<%- include('partials/header') %>
<h2>Employee List</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th><th>Position</th><th>Dept</th><th>Salary</th><th>Score</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% employees.forEach(emp => { %>
      <tr>
        <td><%= emp.name %></td>
        <td><%= emp.position %></td>
        <td><%= emp.department %></td>
        <td><%= emp.salary %></td>
        <td><%= emp.performanceScore %></td>
        <td>
          <a href="/dashboard/edit/<%= emp._id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/dashboard/delete/<%= emp._id %>" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('partials/footer') %>